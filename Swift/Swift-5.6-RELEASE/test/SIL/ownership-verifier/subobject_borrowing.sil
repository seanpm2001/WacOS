  %3 = struct_extract %2 : $A, #A.ptr2
  %4 = unchecked_enum_data %3 : $Optional<(Builtin.NativeObject, Builtin.NativeObject)>, #Optional.some!enumelt
  end_borrow %1 : $B
  %5 = tuple_extract %4 : $(Builtin.NativeObject, Builtin.NativeObject), 1
