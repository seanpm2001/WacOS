// CHECK:  call %swift.type* @__swift_instantiateConcreteTypeFromMangledName
// CHECK:  load
// CHECK:  call %swift.opaque* %{{.*}}(%swift.opaque* noalias {{.*}}, %swift.type* {{.*}})
