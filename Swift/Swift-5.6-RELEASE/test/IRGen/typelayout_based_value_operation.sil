sil @testValue : $@convention(thin) (@in A<C>) -> ()  {
entry(%arg : $*A<C>):
  %loc = alloc_stack $A<C>
  copy_addr %arg to [initialization] %loc : $*A<C>
  destroy_addr %arg : $*A<C>
  destroy_addr %loc : $*A<C>
  dealloc_stack %loc: $*A<C>
  %ret = tuple ()
  return %ret : $()
}

sil_vtable C {}
