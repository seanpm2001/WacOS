// CHECK:   load %swift.type**, %swift.type*** [[SLOT]], align 8
// CHECK:   br
// CHECK:   store {{.*}} @_TMfV18field_type_vectors3Foo
// CHECK:   call %swift.type* @_TMaV18field_type_vectors3Bar(%swift.type* %T)

