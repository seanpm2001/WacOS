              y_stride: y_stride,
              x_padding: x_padding,
              y_padding: y_padding,
              k_width: k_width,
              k_height: k_height,
              in_channels: in_channels,
              out_channels: out_channels,
              weights: weights,
              bias: .zero,
              activation: .identity)
  }
}

